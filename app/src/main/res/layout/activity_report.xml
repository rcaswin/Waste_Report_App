<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity"
    android:background="#CEF6CE">

    <TextView
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Report"
        android:id="@+id/report"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        android:background="#CEF6CE"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Name: "
        android:id="@+id/name"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/report"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Email: "
        android:id="@+id/email"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Phone: "
        android:id="@+id/phone"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Location: "
        android:id="@+id/location"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Panchayat: "
        android:id="@+id/place"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Image: "
        android:id="@+id/image"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/place"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Description: "
        android:id="@+id/desc"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/image"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/submit"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/darkgreen"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/desc"

        android:layout_marginLeft="150dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Enter your name"
        android:textColor="@color/black"
        android:id="@+id/nameip"
        android:textSize="15dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/report"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Enter your Email"
        android:textColor="@color/black"
        android:id="@+id/emailip"
        android:inputType="textEmailAddress"
        android:textSize="15dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/nameip"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Enter your Phone Number"
        android:textColor="@color/black"
        android:id="@+id/phoneip"
        android:inputType="phone"
        android:textSize="15dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/emailip"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Choose the Location"
        android:textColor="@color/black"
        android:id="@+id/locationip"
        android:textSize="15dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/phoneip"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>


    <Spinner
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/dropdown"
        android:layout_below="@+id/locationip"
        android:layout_marginLeft="150dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/green"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_drop_down_24"
        android:layout_below="@+id/locationip"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/dropdown"
        android:id="@+id/imageip"
        android:background="@drawable/baseline_image_24"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="150dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/uploadbtn"
        android:layout_below="@+id/dropdown"
        android:layout_marginLeft="260dp"
        android:text="Upload"
        android:background="@color/darkgreen"
        android:focusable="true"
        android:layout_marginTop="60dp"/>


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_location_on2_24"
        android:layout_above="@+id/dropdown"
        android:layout_marginLeft="330dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/green"
        android:id="@+id/locatebtn"/>



    <EditText
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:hint="Type your comments"
        android:textColor="@color/black"
        android:id="@+id/descip"
        android:textSize="15dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/imageip"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>



</RelativeLayout>