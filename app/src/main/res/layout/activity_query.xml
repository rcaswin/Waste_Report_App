<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context=".QueryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUERIES"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/query"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textStyle="bold"
        android:layout_below="@+id/query"
        android:textColor="@color/white"
        android:id="@+id/queryabout"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Queries"
        android:layout_below="@+id/queryabout"
        android:id="@+id/queryde"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_below="@+id/queryde"
        android:textColor="@color/white"
        android:id="@+id/contact"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contactdetails"
        android:layout_below="@+id/contact"
        android:textColor="@color/white"
        android:id="@+id/contactde"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contactphone"
        android:layout_below="@+id/contactde"
        android:textColor="@color/white"
        android:id="@+id/contactph"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>
</RelativeLayout>